@model WebBS.Models.GCC_EMPLEADO_INF_CREDITICIO

@{
    ViewBag.Title = "Datos de Evaluación";
}


<h2>Datos de Evaluación</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Cod_registro)

        <div class="form-group">
            <label class="control-label col-md-3">Nro. Solicitud</label>
            <div class="col-md-2">
                @Html.TextBox("nro", Model.GCC_INFORME_CREDITICIO.GCC_SOLICITUD_CREDITO.Num_solicitud , new { @class = "form-control", @readonly = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Fecha Solicitud</label>
            <div class="col-md-2">
                @Html.TextBox("nro", Model.GCC_INFORME_CREDITICIO.GCC_SOLICITUD_CREDITO.Fec_solicitud, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-3">RUC / Razón Social</label>
            <div class="col-md-2">
                @Html.TextBox("ruc", Model.GCC_INFORME_CREDITICIO.GCC_SOLICITUD_CREDITO.GCC_CLIENTE_JURIDICO.GCC_CLIENTE.Num_doc_identidad, new { @class = "form-control", @readonly = "true" })
            </div>
            <div class="col-md-5">
                @Html.TextBox("ruc", Model.GCC_INFORME_CREDITICIO.GCC_SOLICITUD_CREDITO.GCC_CLIENTE_JURIDICO.Razon_social, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3" >Rango de Línea de Crédito</label>
            <div class="col-md-3">
                @Html.TextBox("rango", "<<" + Model.GCC_INFORME_CREDITICIO.GCC_POLITICA_CREDITO.GCC_PLAN_CREDITO.Rango_inicio.ToString("#,##0.00") + " a " + Model.GCC_INFORME_CREDITICIO.GCC_POLITICA_CREDITO.GCC_PLAN_CREDITO.Rango_fin.ToString("#,##0.00") + ">>", new { @class = "form-control", @readonly = "true", @style = "text-align:center" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Reporte Infocorp</label>
            <div class="col-md-3">
                @Html.ActionLink("Descargar", "DownloadFile", new { id = Model.GCC_INFORME_CREDITICIO.Cod_informe_crediticio }, new { @class = "btn btn-primary" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Cant. de Línea de Crédito</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.GCC_INFORME_CREDITICIO.Monto_linea_credito_aprob, new { htmlAttributes = new { @class = "form-control", @style = "text-align:right", @type = "number" } })
                @Html.ValidationMessageFor(model => model.GCC_INFORME_CREDITICIO.Monto_linea_credito_aprob, "", new { @class = "text-danger" })
            </div>
        </div>      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Content("~/EmpleadoInfCrediticio/Index")"><input type="button" value="<< Regresar" class="btn btn-default" /></a>
                <input type="submit" value="Aprobar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}
<script type="text/javascript">
@if (TempData["message"] != null)
{

    <Text>
    alert('@TempData["message"]');
    </text>

}
</script>

@model WebBS.Models.GCC_EMPLEADO_INF_CREDITICIO

@{
    ViewBag.Title = "Datos de Evaluación";
}


<h2>Datos de Evaluación</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Cod_registro)

        <div class="form-group">
            @Html.Label("Rango de Línea de Crédito", htmlAttributes: new { @class = "control-label col-md-2" })
          
            <div class="col-md-10">
               @Html.DisplayTextFor(model=>model.GCC_INFORME_CREDITICIO.GCC_POLITICA_CREDITO.GCC_PLAN_CREDITO.Rango_inicio) 
                <label> --- </label>           
               @Html.DisplayTextFor(model => model.GCC_INFORME_CREDITICIO.GCC_POLITICA_CREDITO.GCC_PLAN_CREDITO.Rango_fin)
                 </div>
        </div>       

        <div class="form-group">
            @Html.LabelFor(model => model.GCC_INFORME_CREDITICIO.Monto_linea_credito_eval, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GCC_INFORME_CREDITICIO.Monto_linea_credito_eval, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GCC_INFORME_CREDITICIO.Monto_linea_credito_eval, "", new { @class = "text-danger" })
            </div>
        </div>      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}
<script type="text/javascript">
@if (TempData["message"] != null)
{

    <Text>
    alert('@TempData["message"]');
    </text>

}
</script>

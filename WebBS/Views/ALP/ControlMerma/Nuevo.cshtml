@model WebBS.Models.ALP_CONSTANCIA_PREPARADO
@{
    ViewBag.Title = "Nuevo Control Merma";
}

<h2>Registrar Control Merma</h2>

<input id="txtCantMerma" type="hidden" value="@ViewBag.cantidadMerma" />
@using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset disabled>
        <legend></legend>
        <div class="form-group disabled">
            <label for="txtNroConstancia" class="col-sm-2 control-label">Nro Constancia</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtNroConstancia" placeholder="Nro Orden" value="@Html.DisplayFor(model => model.num_constancia_preparado)">
            </div>
        </div>
        <div class="form-group disabled">
            <label for="txtNroOrden" class="col-sm-2 control-label">Nro Orden</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtNroOrden" placeholder="Nro Orden" value="@Html.DisplayFor(model => model.num_orden_preparado)">
            </div>
        </div>
        <div class="form-group disabled">
            <label for="txtNroOrden" class="col-sm-2 control-label">Nombre Preparado</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtNroOrden" placeholder="Nombre Preparado" value="@Html.DisplayFor(model => model.ALP_ORDEN_PREPARADO.ALP_RECETA.nom_preparado)">
            </div>
        </div>
        <div class="form-group disabled">
            <label for="txtTecnico" class="col-sm-2 control-label">Técnico Farmacéutico</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtTecnico" placeholder="Encargado" value="@ViewBag.tecnicoFarmaceutico">
            </div>
        </div>
        <div class="form-group disabled">
            <label for="txtTecnico" class="col-sm-2 control-label">Técnico Laboratorista</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtTecnico" placeholder="Encargado" value="@ViewBag.tecnicoLaboratorista">
            </div>
        </div>
        <div class="form-group disabled">
            <label for="txtTecnico" class="col-sm-2 control-label">Encargado</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtTecnico" placeholder="Encargado" value="@ViewBag.tecnicoLaboratorista">
            </div>
        </div>
        <div class="form-group disabled">
            <label for="txtFecMerma" class="col-sm-2 control-label">Fecha Control Merma (dd/mm/yyyy)</label>
            <div class="col-sm-10">
                <input type="datetime" class="form-control" id="txtFecMerma">
            </div>
        </div>
    </fieldset>

    <fieldset>
        <div class="panel panel-default">
            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Código Insumo</th>
                            <th>Insumo</th>
                            <th>Unidad de Medida</th>
                            <th>Cantidad</th>
                            <th>Cantidad Real</th>
                            <th>Diferencia</th>
                            <th>Motivo</th>
                        </tr>
                    </thead>
                    <tbody id="tbConstanciaInsumoContent">
                        @foreach (var item in Model.ALP_CONSTANCIA_PREPARADO_INSUMO_ORDEN)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cod_insumo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ALP_ORDEN_PREPARADO_INSUMO.ALP_INSUMO.nom_insumo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ALP_ORDEN_PREPARADO_INSUMO.ALP_INSUMO.unidad_medida)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ALP_ORDEN_PREPARADO_INSUMO.cant_insumo)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.cant_insumo_constancia)
                                </td>
                                <td>
                                    @{ ViewBag.diferencia = item.cant_insumo_constancia - item.ALP_ORDEN_PREPARADO_INSUMO.cant_insumo; }
                                    @ViewBag.diferencia
                                </td>
                                <td>
                                    <div class="form-group disabled">
                                        <div class="col-sm-10">
                                            @if (@ViewBag.diferencia > 0)
                                            { 
                                                <input type="text" class="form-control" placeholder="Motivo">
                                            }
                                            else
                                            {
                                                <input type="text" class="form-control" placeholder="Motivo" value="Sin observación" disabled>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </fieldset>

    <br />

    <div class="row">
        <div class="col-md-1"><a id="btnGuardar" class="btn btn-primary">Guardar</a></div>
        <div class="col-md-1">@Html.ActionLink("Cancelar", "Lista", "Constancia", new { @class = "btn btn-danger" })</div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/NuevoControlMerma")
}



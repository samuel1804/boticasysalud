
@{
    ViewBag.Title = "Lista";
}

<h2>Lista de Solicitud de Transporte</h2>

<form class="form-inline" role="form">
    <div class="form-group">
        <label class="col-lg-4 control-label">Nro Solicitud</label>
        <div class="col-lg-8">
            <input id="txtNroConstancia" class="form-control" placeholder="Nro Solicitud" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-4 control-label">Fecha Solicitud</label>
        <div class="col-lg-8">
            <input id="txtFecSolicitud" type="date" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-4 control-label">Nombre Preparado</label>
        <div class="col-lg-8">
            <input id="txtNomPreparado" class="form-control" placeholder="Nombre Preparado" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-4 control-label">Sucursal</label>
        <div class="col-lg-8">
            @Html.DropDownList("Sucursales", new SelectList(ViewBag.Sucursales, "Value", "Text"), new { @id = "selSucursal", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-10">
            <button id="btnBuscar" type="button" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>

<br />
<div id="btnNuevo" class="pull-right">
    <a href="../Solicitud/ListaConstancia" class="btn btn-success">Agregar Nueva Solicitud</a>
</div>
<br />
<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Resultado</div>
    <div class="table-responsive">
        <!-- Table -->
        <table class="table table-striped table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <th>Nro Solicitud</th>
                    <th>Fecha</th>
                    <th>Sucursal</th>
                    <th>Químico Laboratorista</th>
                    <th>Nombre Preparado</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody id="tbConstanciaContent"></tbody>
        </table>
    </div>
</div>
<br />

<div>
    <a class="btn btn-danger" href="../../Home/Index">Salir</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/ListaSolicitud")
}
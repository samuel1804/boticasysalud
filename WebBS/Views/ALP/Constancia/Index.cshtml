@model IEnumerable<WebBS.Models.ALP_ORDEN_PREPARADO>

@{
    ViewBag.Title = "Constancia de Preparado";
}

    <form class="form-inline" role="form">
        <div class="form-group">
            <label class="col-lg-4 control-label">Nro Orden</label>
            <div class="col-lg-8">
                <input id="txtNroOrden" class="form-control" placeholder="Nro Orden"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-4 control-label">Fecha Orden</label>
            <div class="col-lg-8">
                <input id="txtFecOrden" type="date" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-4 control-label">Nombre Preparado</label>
            <div class="col-lg-8">
                <input id="txtNomPreparado" class="form-control" placeholder="Nombre Preparado" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-4 control-label">Sucursal</label>
            <div class="col-lg-8">
                @Html.DropDownList("Sucursales", new SelectList(ViewBag.Sucursales, "Value", "Text"), new { @id = "selSucursal", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10">
                <button id="btnBuscar" type="button" class="btn btn-primary">Buscar</button>
            </div>
        </div>
    </form>


@model PagedList.IPagedList<WebBS.Models.GCC_INFORME_CREDITICIO>
@using PagedList.Mvc;
@using PagedList;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Generar Contrato de Crédito";
}

<h2>Generar Contrato de Crédito</h2>

@using (Html.BeginForm("GenerarContratoIndex", "InformeCrediticio", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div style="border:1px solid black;">
        <table style="width:100%">
            <tr><td>&nbsp;&nbsp;&nbsp;</td></tr>
            <tr>
                <td>&nbsp;&nbsp;&nbsp;</td>
                <td>Nro Solicitud</td>
                <td><input type="text" name="nroSolCredito"></td>
                <td>RUC</td>
                <td><input type="number" name="ruc"></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td>&nbsp;&nbsp;&nbsp;</td>
                <td>Fecha Solicitud Desde</td>
                <td><input type="date" name="fechaInformeInicio" /></td>
                <td>Hasta</td>
                <td><input type="date" name="fechaInformeFin" /></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td>&nbsp;&nbsp;&nbsp;</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><input type="submit" value="Buscar" class="btn btn-default" /></td>
                <td></td>
            </tr>
            <tr><td>&nbsp;&nbsp;&nbsp;</td></tr>
        </table>

    </div>

}

<table class="table">
    <tr>
        <th>
            Nro Solicitud
        </th>
        <th>
            RUC
        </th>
        <th>
            Razón Social
        </th>
        <th>
            Fecha Solicitud
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color:white;">
            <td>
                @Html.DisplayFor(modelItem => item.GCC_SOLICITUD_CREDITO.Num_solicitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GCC_SOLICITUD_CREDITO.GCC_CLIENTE_JURIDICO.GCC_CLIENTE.Num_doc_identidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GCC_SOLICITUD_CREDITO.GCC_CLIENTE_JURIDICO.Razon_social)
            </td>
            <td>
                @Html.ValueFor(modelItem => item.GCC_SOLICITUD_CREDITO.Fec_solicitud, "{0:dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado_actual)
            </td>
            <td>
                @if (item.Estado_actual == "Aprobado")
                {
                    @Html.ActionLink("Generar Contrato", "GenerarContrato", new { id = item.Cod_informe_crediticio }, new { @class = "btn-link" })
                }
                else
                {
                @Html.ActionLink("Imprimir Contrato", "ImprimirContrato", new { id = item.Cod_informe_crediticio }, new { @class = "btn-link" })
                @*@Html.ValueFor(modelItem => item.GCC_SOLICITUD_CREDITO.GCC_EMPLEADO_SOL_CREDITO.Last().Fec_registro, "{0:dd/MM/yyyy}")*@
                }
            </td>
        </tr>
    }

</table>
<br />
Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("GenerarContratoIndex",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
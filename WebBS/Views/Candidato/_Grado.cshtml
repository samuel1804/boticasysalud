@model WebBS.Models.RRH_GradoAcademico
@{
    Layout = null;
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


@using (Ajax.BeginForm("CreateEditCandidato", "Candidato",
            new AjaxOptions()
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "GradoDiv",
                OnSuccess="onSucess"
            }, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
      <div class="form-horizontal">
    <fieldset>
        <legend>Agregar Grado Académico</legend>
        @* <div style="color: Green; font-weight: bold">
                @ViewBag.Msg
            </div>*@
        @if (ViewBag.IsUpdate == true)
        {
            @Html.HiddenFor(model => model.Cod_GradoAcademico)
        }
        


      

        <div class="form-group">
            @Html.LabelFor(model => model.Titulo, new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.CentroEstudios,"Centro de Estudios", new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.CentroEstudios, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CentroEstudios, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Anio_graduacion,"Año de Graduación", new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Anio_graduacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Anio_graduacion, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ruta_certificado,"Certificado", new { @class = "control-label col-md-4" })
            <div class="col-md-6">
                <!-- @Html.EditorFor(model => model.ruta_certificado, new { htmlAttributes = new { @class = "form-control" } })-->
                <input type="file" name="file" id="file" style="width: 100%;" />

                @Html.ValidationMessageFor(model => model.ruta_certificado)
            </div>
        </div>
    
    <button type="submit" id="btnUpload" value="Adjuntar" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                    <span class="ui-button-text">Update</span>
                </button>
    



        <div style="float: right">
            @if (ViewBag.IsUpdate == true)
            {

                <button type="submit" id="btnUpdate" name="Command" value="Update" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                    <span class="ui-button-text">Update</span>
                </button>
            }
            else
            {
               
            
                
                <button type="submit" id="btnSave" name="Command" value="Save" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                    <span class="ui-button-text">Agregar</span>
                </button>
                
            }
            &nbsp; &nbsp;
            <button type="button" id="btncancel" value="Cancelar" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                <span class="ui-button-text">Cancelar</span>
            </button>
        </div>



    </fieldset>
          </div>
    
    
    

}

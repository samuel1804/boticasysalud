@model WebBS.Models.RRH_ExperienciaLaboral
@{
    Layout = null;
}




@using (Ajax.BeginForm("CreateEditExperiencia", "Candidato",
            new AjaxOptions()
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "ExperienciaDiv",
                OnSuccess = "onSucess"
            }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <fieldset>
            <legend>Agregar Grado Académico</legend>
            @* <div style="color: Green; font-weight: bold">
                    @ViewBag.Msg
                </div>*@
            @if (ViewBag.IsUpdate == true)
            {
                @Html.HiddenFor(model => model.Cod_ExperienciaLaboral)
            }





            <div class="form-group">
                @Html.LabelFor(model => model.LugarTrabajo,"Empresa", new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.LugarTrabajo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LugarTrabajo, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.Nom_puesto,"Puesto", new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Nom_puesto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nom_puesto, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Nom_area,"Area", new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Nom_area, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nom_area, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Desc_Reponsabilidades,"Responsabilidades", new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.TextAreaFor(model => model.Desc_Reponsabilidades, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Desc_Reponsabilidades, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Fec_Inicio_elaboral, "Fecha Inicio", new { @class = "control-label col-md-4" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Fec_Inicio_elaboral, new { @type = "date", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Fec_Inicio_elaboral, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Fec_Fin_elaboral, "Fecha Fin", new { @class = "control-label col-md-4" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Fec_Fin_elaboral, new { @type = "date", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Fec_Fin_elaboral, "", new { @class = "text-danger" })
                </div>
            </div>


           


            <div style="float: right">
                @if (ViewBag.IsUpdate == true)
                {

                    <button type="submit" id="btnUpdate" name="Command" value="Update" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                        <span class="ui-button-text">Update</span>
                    </button>
                }
                else
                {



                    <button type="submit" id="btnSave" name="Command" value="Save" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                        <span class="ui-button-text">Agregar</span>
                    </button>

                }
                &nbsp; &nbsp;
                <button type="button" id="btncancel" value="Cancelar" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                    <span class="ui-button-text">Cancelar</span>
                </button>
            </div>



        </fieldset>
    </div>




}



<script type="text/javascript">

    $(document).ready(function () {

        $("#btncancel").on("click", function (e) {
            // location.reload(true);
            $("#dialog-edit").dialog('close');

        });


    });
</script>

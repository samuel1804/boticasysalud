@model WebBS.Models.RRH_ExperienciaLaboral
@{
    Layout = null;
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


@using (Ajax.BeginForm("CreateEditExperiencia", "Candidato",
            new AjaxOptions()
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "ExperienciaDiv",
                OnSuccess = "onSucess"
            }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <fieldset>
            <legend>Agregar Grado Académico</legend>
            @* <div style="color: Green; font-weight: bold">
                    @ViewBag.Msg
                </div>*@
            @if (ViewBag.IsUpdate == true)
            {
                @Html.HiddenFor(model => model.Cod_ExperienciaLaboral)
            }





            <div class="form-group">
                @Html.LabelFor(model => model.LugarTrabajo, new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.LugarTrabajo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LugarTrabajo, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.Nom_puesto, new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Nom_puesto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nom_puesto, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Nom_area, new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Nom_area, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nom_area, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Desc_Responsabilidades, new { @class = "control-label col-md-4" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Desc_Responsabilidades, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Desc_Responsabilidades, "", new { @class = "text-danger" })
                </div>
            </div>





            <div style="float: right">
                @if (ViewBag.IsUpdate == true)
                {

                    <button type="submit" id="btnUpdate" name="Command" value="Update" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                        <span class="ui-button-text">Update</span>
                    </button>
                }
                else
                {



                    <button type="submit" id="btnSave" name="Command" value="Save" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                        <span class="ui-button-text">Agregar</span>
                    </button>

                }
                &nbsp; &nbsp;
                <button type="button" id="btncancel" value="Cancelar" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                    <span class="ui-button-text">Cancelar</span>
                </button>
            </div>



        </fieldset>
    </div>




}
@model IEnumerable<WebBS.Models.RRH_Candidato>

@{
    ViewBag.Title = "Relación de Candidatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Relación de Candidatos</h2>

<p>
    @Html.ActionLink("Nuevo Candidato", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            Apellido Paterno
        </th>
        <th>
           Apellido Materno
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DNI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
      
        <th>
            Fecha Post.
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApellidoPaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApellidoMaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DNI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Fec_postulacion)
        </td>
    
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.Cod_candidato }) |
            @Html.ActionLink("Ver", "Details", new { id=item.Cod_candidato }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Cod_candidato })
        </td>
    </tr>
}

</table>

                                        <i class="glyphicon glyphicon-user"></i> Usuario
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="">Perfil de usuario</a></li>
                                        <li role="separator" class="divider hidden-xs"></li>
                                        <li><a href="~/">Salir del sistema</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <!-- /top nav -->
                    <div class="padding">
                        <div class="full col-sm-9">
                            <section>
                                
                                    @RenderBody()
                                
                            </section>

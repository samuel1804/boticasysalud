                                        <i class="glyphicon glyphicon-plus"></i> <span>Bitacora de Eventos de Desaduanaje</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index","MonitorearDesaduanaje")">
                                        <i class="glyphicon glyphicon-plus"></i> <span>Monitoreo de Desaduanaje</span>
                                    </a>
                                </li>
                            </ul>
                        </li>                        
                    </ul>
                    <ul class="list-unstyled hidden-xs" id="sidebar-footer">
                        <li>
                            <a href="#"><h3>Boticas y Salud</h3></a>
                            <span>Dedicados a cuidate</span>
                        </li>
                    </ul>
                    <!-- tiny only nav-->
                    <ul class="nav visible-xs" id="xs-menu">
                        <li><a href="#featured" class="text-center"><i class="glyphicon glyphicon-list-alt"></i></a></li>
                        <li><a href="#stories" class="text-center"><i class="glyphicon glyphicon-list"></i></a></li>
                        <li><a href="#" class="text-center"><i class="glyphicon glyphicon-paperclip"></i></a></li>
                    </ul>
                </div>
                <!-- /sidebar -->
                <!-- main right col -->
                <div class="column col-sm-10 col-xs-11" id="main">
                    <!-- top nav -->
                    <div class="navbar navbar-blue navbar-static-top">
                        <div class="navbar-header">
                            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Menú</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @*<a href="/" class="navbar-brand logo">b</a>*@
                            <a href="~/Home" class="navbar-brand logo">
                                <img src="~/Content/images/logo.png" class="img-responsive" />
                            </a>
                        </div>
                        <nav class="collapse navbar-collapse" role="navigation">
                          
                            <ul class="nav navbar-nav">
                                <li>
                                    
                                </li>

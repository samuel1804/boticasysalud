                                <h4 class=" text-center">
                                    <a href="#">Sistema Integrado de Farmacia</a>
                                </h4>
                                <hr>
                            </div>
                        </div><!-- /col-9 -->
                    </div><!-- /padding -->
                </div>
                <!-- /main -->

            </div>
        </div>
    </div>

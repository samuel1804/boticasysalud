@model WebBS.Models.IMP_ACCION

@{
    ViewBag.Title = "Details";
    WebBS.Models.IMP_ACTIVIDAD_PLANIFICADA iMP_ACTIVIDAD_PLANIFICADA = (WebBS.Models.IMP_ACTIVIDAD_PLANIFICADA)TempData["ActividadPlanificada"];
}

<h2>Detalle de Acción</h2>
<div id="divMensajeInformativo">
    <span class="fa fa-info-circle"></span>
    <span id="lblMensajeInformativo">Datos completos de la acción.</span>
</div>
<hr />
<div>
    <h4>Actividad</h4>
    <table class="table-bordered">
        <tr class="rowGroup" data-toggle="collapse" data-target="#Panel_@iMP_ACTIVIDAD_PLANIFICADA.Cod_solicitud_gestion_permiso">
            <td>
                <h4>Tipo : @iMP_ACTIVIDAD_PLANIFICADA.IMP_ACTIVIDAD.IMP_TIPO_ACTIVIDAD.Nombre</h4>
                <h5>Actividad : @iMP_ACTIVIDAD_PLANIFICADA.Titulo</h5>
                <p>Fecha cierre planificado: @iMP_ACTIVIDAD_PLANIFICADA.Fec_cierre_planificacion.ToString("dd/MM/yyyy")</p>
            </td>
        </tr>
    </table>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            Fecha de acción
        </dt>

        <dd>
            @Html.Raw(Model.Fec_accion.ToString("dd/MM/yyyy"))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Evidencia)
        </dt>

        <dd>
            <a href="@Url.Content(Model.Evidencia)" class="control-table text-center" target="_blank"><i class="fa fa-file-archive-o"></i></a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Observaciones)
        </dt>

        <dd>
            <p> @Html.DisplayFor(model => model.Observaciones)</p>
        </dd>
        <dt>
            Fecha de Registro
        </dt>

        <dd>
            @Html.Raw(Model.Fec_usu_regi.ToString("dd/MM/yyyy"))
        </dd>
        @if (Model.Fec_usu_modi.HasValue)
        {
            <dt>
                Fecha de última modificación
            </dt>

            <dd>
                @Html.Raw(Model.Fec_usu_modi.Value.ToString("dd/MM/yyyy"))
            </dd>
        }
    </dl>
</div>
<p>
    <a id="btnCancelar" class="btn btn-primary" href="@Url.Action("Edit", "BitacoraActividadPlanificada",new  { Id=Model.Cod_accion })">Editar</a>
    <a id="btnCancelar" class="btn btn-default" href="@Url.Action("Index", "BitacoraActividadPlanificada",new  { Id=Model.Cod_actividad_planificada })">Cancelar</a>
</p>

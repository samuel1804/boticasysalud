@model WebBS.Models.RRH_PruebaAutoevaluacion
@using WebBS.Models
@{
    ViewBag.Title = "Resultados";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var conc = Model.RRH_Empleado.Nom_empleado + " " + Model.RRH_Empleado.Ap_paterno +" " + Model.RRH_Empleado.Ap_materno; 
}

<h2>Resultados</h2>




    <div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true)




    <div class="form-group">
        @Html.LabelFor(model => model.Fec_evaluacion, "Nombres:", new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.RRH_Empleado.Nom_Completo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Fec_evaluacion, "Cargo:", new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.RRH_Empleado.RRH_Puesto.Nom_puesto, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Fec_evaluacion, "Area:", new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.RRH_Empleado.RRH_Puesto.RRH_Area.Nombre, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

        </div>

        @Html.LabelFor(model => model.Fec_evaluacion, "Fecha:", new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.Fec_evaluacion, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

        </div>




    </div>

    <hr />


    <div class="form-group">

        <h4 class="control-label col-md-2">Fortalezas</h4>
    </div>
    <div class="form-group">
        @Html.Label("Aspectos que valoramos", new { @class = "control-label col-md-6" })

    </div>



    <fieldset>
        <div class="panel panel-default">
            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Criterio</th>
                            <th>Respuesta</th>
                        </tr>
                    </thead>

                    @foreach (var item in ViewBag.Fortalezas)
                            {
                        <tr>
                            <td>
                                @item.Desc_criterio
                            </td>
                            <td>
                                @item.Respuesta
                            </td>



                        </tr>
                            }


                </table>
            </div>
        </div>
    </fieldset>




        <div class="form-group">

            <h4 class="control-label col-md-2">Debilidades</h4>



        </div>
<div class="form-group">
    @Html.Label("Aspectos en los que debe trabajar para mejorar su desempeño laboral", new { @class = "control-label col-md-8" })

</div>



        <fieldset>
            <div class="panel panel-default">
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Criterio</th>
                                <th>Respuesta</th>
                            </tr>
                        </thead>

                        @foreach (var item in ViewBag.Debilidades)
                        {
                            <tr>
                                <td>
                                    @item.Desc_criterio
                                </td>
                                <td>
                                    @item.Respuesta
                                </td>



                            </tr>
                        }


                    </table>
                </div>
            </div>
        </fieldset>
        

        <div class="form-group">
            @Html.LabelFor(model => model.PuntajeTotal, "Puntaje:", new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.PuntajeTotal, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

            </div>
        </div>

        <div class="col-md-offset-4 col-md-10">
            <input type="submit" name="btnRegistrar" value="Imprimir" class="btn btn-default" />
            <input type="submit" name="btnRegistrarMas" value="Salir" class="btn btn-default" />
            </div>

        </div>

        
    


